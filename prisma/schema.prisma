generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int            @id @default(autoincrement())
  createdAt DateTime       @default(now())
  firstName String
  email     String         @unique
  password  String
  age       Int?
  todos     UsersOnTodos[]
}

model Todo {
  id         Int            @id @default(autoincrement())
  createdAt  DateTime       @default(now())
  name       String
  isComplete Boolean        @default(false)
  users      UsersOnTodos[]
}

model UsersOnTodos {
  createdAt DateTime @default(now())
  userId    Int
  todoId    Int
  todo      Todo     @relation(fields: [todoId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@id([userId, todoId])
}
